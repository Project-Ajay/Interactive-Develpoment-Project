<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.AdminUI"
             Title="AdminUI"
             Background="powderblue">
    <VerticalStackLayout>
        <Label 
            Text="Administration Center"
            Style="{StaticResource HeaderLabelStyle}"/>
        <Image
            x:Name="AdminPageImage"
            HeightRequest="600"
            WidthRequest="600"/>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="13">

            <Button
                Text="Register Student"
                Clicked="OnRegisterStudent"
                Style="{StaticResource CustomButtonStyle}"/>

            <Button
                Text="Register Teacher"
                Clicked="OnRegisterTeacher"
                Style="{StaticResource CustomButtonStyle}"/>

            <Button
                Text="Register Course"
                Clicked="OnRegisterCourse"
                Style="{StaticResource CustomButtonStyle}"/>


        </HorizontalStackLayout>

        <Button
            Text="Back"
            Clicked="BackButton_Clicked"
            Style="{StaticResource CustomButtonStyle}"
            Margin="0,50"
            />

    </VerticalStackLayout>
</ContentPage>
