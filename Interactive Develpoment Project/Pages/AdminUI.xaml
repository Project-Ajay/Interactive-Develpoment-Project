<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.AdminUI"
             Title="AdminUI">
    <VerticalStackLayout>
        <Label 
            Text="Admin"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Title"/>
        <Image
            x:Name="AdminPageImage"
            HeightRequest="600"
            WidthRequest="600"/>

        <HorizontalStackLayout>

            <Button
                Text="Register Student"
                Clicked="OnRegisterStudent"/>

            <Button
                Text="Register Course"
                Clicked="OnRegisterCourse"/>


        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
