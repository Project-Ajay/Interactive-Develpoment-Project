<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.LandingPage"
             Title="LandingPage"
             Background="White">

    <VerticalStackLayout HorizontalOptions="Center" Spacing="35">
        <Label 
            Text="Welcome"
            Style="{StaticResource HeaderLabelStyle}"/>

        <Label Margin="50" FontSize="40" FontAttributes="Italic"
            Text="Selected Whether You're A"
            />

        <Button
            ImageSource="admin.png" MaximumHeightRequest="90" MaximumWidthRequest="250"          
            x:Name="AdminButton"
            Clicked="AdminButton_Clicked"
            Text="Administration"
            Style="{StaticResource LandingPageButton}"/>

        <Button
            ImageSource="teacher.png" MaximumHeightRequest="90" MaximumWidthRequest="250"
            x:Name="TeacherButton"
            Clicked="TeacherButton_Clicked"
            Text="Teacher"
            Style="{StaticResource LandingPageButton}"/>

        <Button
            ImageSource="student.png" MaximumHeightRequest="90" MaximumWidthRequest="250"
            x:Name="StudentButton"
            Clicked="StudentButton_Clicked"
            Text="Student"
            Style="{StaticResource LandingPageButton}"/>

    </VerticalStackLayout>

</ContentPage>