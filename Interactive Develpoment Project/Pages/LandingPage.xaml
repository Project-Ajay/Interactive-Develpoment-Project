<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.LandingPage"
             Title="LandingPage">

    <VerticalStackLayout HorizontalOptions="Center" Spacing="25">
        <Label 
            Text="Welcome"
            Style="{StaticResource HeaderLabelStyle}"/>

        <Label Margin="50" FontSize="40" FontAttributes="Italic"
            Text="Selected Whether You're A"
            />

        <Button
            x:Name="AdminButton"
            Clicked="AdminButton_Clicked"
            Text="Administration"
            Style="{StaticResource CustomButtonStyle}"/>

        <Button
            x:Name="StudentButton"
            Clicked="StudentButton_Clicked"
            Text="Student"
            Style="{StaticResource CustomButtonStyle}"/>

    </VerticalStackLayout>

</ContentPage>