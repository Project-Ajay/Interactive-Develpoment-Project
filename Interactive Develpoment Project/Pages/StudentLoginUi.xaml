<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.StudentLoginUi"
             Title="StudentLoginUi">

    <VerticalStackLayout>

        <Label
            Text="Student Login" Style="{StaticResource HeaderLabelStyle}"/>

        <Image
            Source="student.png" HeightRequest="300"
            WidthRequest="300"
            />


        <Entry
            x:Name="StudentIDEntry"
            Placeholder="Enter Student ID"
            Style="{StaticResource LargeEntryStyle}"/>

        <Entry
            x:Name="StudentPasswordEntry"
            Placeholder="Enter Password"
            Style="{StaticResource LargeEntryStyle}"/>

        <HorizontalStackLayout HorizontalOptions="Center" Padding="50">
            <Button
                x:Name="StudentLoginButton" Clicked="StudentLoginButton_Clicked"
                Text="Login"
                Style="{StaticResource CustomButtonStyle}"/>

            <Button
                x:Name="BackToLanding"
                Clicked="BackToLanding_Clicked"
                Text="Back To Landing Page"
                Style="{StaticResource CustomButtonStyle}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>