<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interactive_Develpoment_Project.Pages.AdminLoginUI"
             Title="AdminLoginUI"
             Background="#509CAF">
    <VerticalStackLayout>

        <Label
            Text="Administration Login" Style="{StaticResource HeaderLabelStyle}"/>

        <Image
            Source="adminavatar.png"
            WidthRequest="200"
            />


        <Entry
            x:Name="AdminIDEntry"
            Placeholder="Enter Adminstartion ID"
            Style="{StaticResource LargeEntryStyle}"/>

        <Entry
            x:Name="AdminPasswordEntry"
            Placeholder="Enter Password"
            Style="{StaticResource LargeEntryStyle}"/>

        <HorizontalStackLayout HorizontalOptions="Center" Padding="50">
            <Button
                x:Name="AdminLoginButton" 
                Clicked="AdminLoginButton_Clicked"
                Text="Login"
                Style="{StaticResource CustomButtonStyle}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>